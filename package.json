{
  "name": "gesture-vision-app",
  "private": true,
  "version": "3.6.2",
  "type": "module",
  "scripts": {
    "copy:wasm": "mkdir -p packages/frontend/public/wasm && cp -r node_modules/@mediapipe/tasks-vision/wasm/* packages/frontend/public/wasm/",
    "copy:models": "mkdir -p packages/frontend/public/models && cp node_modules/@mediapipe/tasks-vision/web/vision/dist/files/*.task packages/frontend/public/models/",
    "build:backend": "tsc -b tsconfig.json",
    "dev:frontend": "cd packages/frontend && vite --host 0.0.0.0",
    "dev:backend": "nodemon --watch packages --watch extensions --ext ts,json --ignore 'extensions/plugins/' --ignore 'extensions/plugins/*/config.*.json' --exec \"tsx --tsconfig tsconfig.json packages/backend/src/server.ts\"",
    "dev:mediamtx": "mediamtx",
    "predev": "echo 'Prerequisites built into Docker image. Starting servers...'",
    "dev": "npm-run-all --parallel dev:mediamtx dev:frontend dev:backend",
    "build:app": "npm run copy:wasm && npm run build:backend && cd packages/frontend && vite build",
    "build:apk": "npm run copy:wasm && npm run build:backend && cd packages/frontend && vite build --mode apk",
    "build:umd": "cd packages/frontend && vite build --config vite.config.umd.js",
    "build": "npm run build:umd && npm run build:app",
    "start:prod": "tsx --tsconfig tsconfig.json packages/backend/src/server.ts",
    "preview": "cd packages/frontend && vite preview",
    "lint:js": "eslint .",
    "lint:html": "htmlhint packages/frontend/src/partials/**/*.html packages/frontend/index.html",
    "type-check": "tsc --noEmit",
    "lint-and-check": "npm-run-all --parallel lint:js lint:html type-check",
    "cap:sync:android": "cd packages/frontend && npx capacitor sync android",
    "cap:open:android": "cd packages/frontend && npx capacitor open android"
  },
  "imports": {
    "#backend/*": "./packages/backend/src/*",
    "#shared/*": "./packages/shared/*",
    "#plugins/*": "./extensions/plugins/*",
    "#frontend/*": "./packages/frontend/src/*"
  },
  "dependencies": {
    "@mediapipe/tasks-vision": "^0.10.21",
    "autoprefixer": "^10.4.21",
    "cors": "^2.8.5",
    "cssnano": "^7.0.7",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "mqtt": "^5.13.1",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "ws": "^8.18.2",
    "zod": "^4.0.5",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-basic-ssl": "^2.0.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "htmlhint": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^7.0.4",
    "vite-plugin-pwa": "^1.0.0"
  },
  "optionalDependencies": {
    "@capacitor/android": "^7.3.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.3.0",
    "@capacitor/core": "^7.3.0"
  }
}